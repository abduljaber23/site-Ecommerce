{% extends 'base.html.twig' %}

{% block title %}Hello ShopController!{% endblock %}
{% block body %}
{# <div class="album py-5 bg-body-tertiary"> #}
  <div class="m">

    <div class="container">
      
      <div class="row g-4">
        
        {% for article in articles %} 
        <div class=" col-xl-3 col-lg-4 col-md-6">
          
          <div class="card">
            <img src="{{article.image}}" class="card-img-top" alt="..." height="220px" >
            <div class="card-body">
              <p class="card-title titre">{{article.name}}</p>
              
              {% for category in article.categorie %}
             <a class="cate" href="{{ path('categorie.shop' , {'id' : category.id}) }}">{{ category.label }}</a> 
              {% endfor %}
              
              <p class="prix">
                {{article.prix|euro}} 
              </p>
              
              <a class="bttn" href="{{ path('detailid.shop', {'id' : article.id}) }}">Voir plus</a>
{# 
